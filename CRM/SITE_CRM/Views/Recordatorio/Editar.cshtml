@model ET.Recordatorio
@{
    ViewBag.Title = "Editar";
    List<ET.Contacto> contactos = ViewBag.Contactos;
}
<div class="container-fluid">
    <h2>@(Model.Id_Recordatorio > 0 ? Model.Tipo : "Nuevo recordatorio")</h2>


    @using (Html.BeginForm("guardar", "Recordatorio", FormMethod.Post))
    {
        @Html.HiddenFor(x => x.Id_Recordatorio)

        <label>Abreviatura</label><br />
        @Html.TextBoxFor(x => x.Abreviatura)
        <br /><br />

        <label>Tipo</label><br />
        @Html.TextBoxFor(x => x.Tipo)
        <br /><br />

        <label>Fecha</label><br />
        @Html.TextBoxFor(x => x.Fecha)
        <br /><br />

        <label>Hora</label><br />
        @Html.TextBoxFor(x => x.Hora)
        <br /><br />

        <label>Minutos</label><br />
        @Html.TextBoxFor(x => x.Minutos)
        <br /><br />

        <label>Detalle</label><br />
        @Html.TextBoxFor(x => x.Detalle)
        <br /><br />

        <label>Empresa</label><br />
        @Html.TextBoxFor(x => x.Id_Empresa)
        <br /><br />

        @*<label>Rol</label><br />*@
        @*<select name="Rol_id">
                @foreach (var r in roles)
                {
                    <option @(r.Id_Rol == Model.Rol_id ? "selected" : "") value="@r.Id_Rol">@r.Nombre</option>
                }
            </select>*@
        <br /><br />

        <button type="submit">Enviar</button>
    }
</div>
