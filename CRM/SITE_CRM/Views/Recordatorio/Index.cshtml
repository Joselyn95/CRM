@model List<ET.Recordatorio>
@{
    ViewBag.Title = "Index";
}

<div class="container-fluid">
    <h2>Contactos</h2>

    <a href="~/Recordatorio/Editar">Nuevo Registro</a>

    <table style="width: 500px">
        <thead>
            <tr>
                <th style="text-align:left;">Abreviatura</th>
                <th style="text-align:left;">Tipo</th>
                <th style="text-align:left;">Fecha</th>
                <th style="text-align:left;">Hora</th>
                <th style="text-align:left;">Minutos</th>
                <th style="text-align:left;">Detalle</th>
                <th style="text-align:left;">Id_Empresa</th>
            </tr>
        </thead>

        <tbody>
            @foreach (var u in Model)
            {
            <tr>
                <td>@u.Abreviatura</td>
                <td>@u.Tipo</td>
                <td>@u.Fecha</td>
                <td>@u.Hora</td>
                <td>@u.Minutos</td>
                <td>@u.Detalle</td>
                <td>@u.Id_Empresa</td>

                <td style="width:200px">
                    <a title="Editar" href="~/Recordatorio/Editar/@u.Id_Recordatorio"> Editar</a>
                </td>
            </tr>
            }
        </tbody>
    </table>
</div>
